{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>
    {% if user.avatar is not null %}
        <img src="{{ asset('uploads/pictures/' ~ user.avatar.b64) }}" height="300" width="400"/>
    {% endif %}
    <table class="table">
        <tbody>
            <tr>
                <th>Username</th>
                <th>Email</th>

                {% for data in user.metadata %}
                    <th>{{ data.type }}</th>
                {% endfor %}
            </tr>
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>

                {% for data in user.metadata %}
                    <td>{{ data.field }}</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('self_edit') }}">edit</a>

{% endblock %}
